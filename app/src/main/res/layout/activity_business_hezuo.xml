<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dfwr.zhuanke.zhuanke.widget.MyTitle
        android:id="@+id/my_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.dfwr.zhuanke.zhuanke.widget.MyTitle>

    <android.support.v7.widget.CardView
        style="@style/order_cardView_style">
        <TextView
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="广告投放：提供硬广和软广两种形式。\n工作号推广：可为点上、直播、医药、传媒等各行各业提供流量服务。我们为数千家app及商家提供精准移动推送服务，\n通过用户的点击率、互动率、分享率、转化率，为app及商家提供用户千万级用户增长渠道。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
   </android.support.v7.widget.CardView>
    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/bg_red"
        android:text="商务合作"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/line_gray"/>

    <android.support.v7.widget.CardView
        style="@style/order_cardView_style">
        <RelativeLayout
            android:id="@+id/rl_add_qq"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageview"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/imageview"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="联系QQ：2531111991"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@mipmap/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>